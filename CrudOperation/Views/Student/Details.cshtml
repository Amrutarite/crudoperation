@model CrudOperation.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>



<div style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; width: 50%; margin: auto; background-color: #f9f9f9;">
    <p><strong>Id:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index" class="btn btn-primary" style="text-decoration: none; color: white; padding: 10px 20px; background-color: #007bff; border-radius: 5px;">Back to List</a>
</div>
