@model CrudOperation.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h1>Delete Student</h1>

<div style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; width: 50%; margin: auto; background-color: #fef2f2;">
    <h3>Are you sure you want to delete this student?</h3>
    <p><strong>Id:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="Delete" method="post" style="text-align: center; margin-top: 20px;">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" style="padding: 10px 20px; background-color: #dc3545; color: white; border: none; border-radius: 5px;">Delete</button>
    <a asp-action="Index" class="btn btn-secondary" style="padding: 10px 20px; text-decoration: none; color: white; background-color: #6c757d; border-radius: 5px;">Cancel</a>
</form>
